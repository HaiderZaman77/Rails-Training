<h1 class="bg-info text-center">Post</h1>

<%= render 'show' %>
<%= render 'comments/form' ,class: 'form-group'%>
<% if can? :edit, @post %>
<%= link_to 'Edit Post', edit_user_post_path(params[:user_id], @post) , class: 'btn btn-info mt-2'%>
<% end %>
<%= link_to 'Back to Posts', user_posts_path(params[:user_id],@post), class: 'btn btn-primary mt-2' %>