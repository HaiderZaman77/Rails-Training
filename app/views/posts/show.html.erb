<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |c| %>
  <p>
    <b>Commenter:</b>
    <%= c.commenter %>
  </p>

  <p>
    <b>Comment:</b>
    <%= c.body %>
  </p>
<% end %>
<%= render 'comments/form' %>
<%= link_to 'Edit Post', edit_user_post_path(params[:user_id], @post) %> |
<%= link_to 'Back to Posts', user_posts_path(params[:user_id],@post) %>