<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |c| %>

  <p>
    <b>Comment:</b>
    <%= c.body %>
  </p>
<% end %>
<%= render 'comments/form' %>
<% if can? :edit, @post %>
<%= link_to 'Edit Post', edit_user_post_path(current_user, @post) ,class:'btn btn-secondary mr-4 mt-5 mb-3' %>
<% end %>
<%= link_to 'Back to Posts', user_posts_path(current_user,@post) ,class:'btn btn-primary mt-5 mb-3' %>
