<% if user_signed_in? %>
  <h4 class='d-flex justify-content-between mb-4 container'>
    <span>Posts</span>
    <%= link_to 'New Post', new_user_post_path(current_user), class: 'btn btn-warning' %>
  </h4>

  <% @posts.each do |post| %>
    <%= link_to user_post_path(current_user,post), class: 'text-decoration-none' do %>
      <div class="card mb-3 container">
        <div class="card-body">
          <span>

            <h5 class='card-header mb-1 text-dark'><%= post.user.name.titleize %></h5>
            <h4 class='card-title mb-2 text-dark'><%= post.title %></h4>
            <p><%= raw(post.content) %></p>

            <h4 class='d-flex justify-content-between mb-4 container'>
          </span>
          <% if can? :destroy, post %>
            <%= link_to 'Delete Post', user_post_path(current_user,post) , method: "delete", data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
          </h4>
          <div class="card-footer text-muted">
          <%= distance_of_time_in_words(post.created_at, Time.now, include_seconds: true) %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
