<p id="notice"><%= notice %></p>
<h1>Welcome To My Site!</h1>



<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', user_post_path(post, params[:user_id])%></td>
        <td><%= link_to 'Edit', edit_user_post_path(post,params[:user_id]) %></td>
        <td><%= link_to 'Destroy', user_post_path(post, params[:user_id]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path %>
